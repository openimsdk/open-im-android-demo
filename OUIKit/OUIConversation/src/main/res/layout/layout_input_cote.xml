<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="ChatVM"
            type="io.openim.android.ouiconversation.vm.ChatVM" />
    </data>

    <io.openim.android.ouicore.widget.InterceptLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:id="@+id/root"
        android:tag="layout/layout_input_cote_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#E8F2FF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp">

            <CheckBox
                android:id="@+id/voice"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:button="@null"
                android:drawableLeft="@drawable/selector_chat_checkbox"
                android:paddingLeft="10dp" />


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <io.openim.android.ouiconversation.widget.TailInputEditText
                    android:id="@+id/chatInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sty_radius_4_white"
                    android:maxHeight="80dp"
                    android:minHeight="35dp"
                    android:paddingStart="3dp"
                    android:text="@={ChatVM.inputMsg}"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="已开启群禁言"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <Button
                android:id="@+id/touchSay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/touch_say"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:padding="7dp"
                android:src="@mipmap/emoji" />

            <ImageView
                android:id="@+id/chatMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:padding="7dp"
                android:src="@mipmap/ic_chat_add" />

            <Button
                android:id="@+id/chatSend"
                android:layout_width="63dp"
                android:layout_height="43dp"
                android:enabled="true"
                android:text="@string/send"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </io.openim.android.ouicore.widget.InterceptLinearLayout>

</layout>

